@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@model List<BookCave.Models.ViewModels.BookViewModel>

@inject SignInManager<ApplicationUser> SignInManager

    @{
        var claim = ((ClaimsIdentity) User.Identity);
    }

<div class="grid-home-container">
    <aside class="grid-home-aside">
        
        <div class="grid-home-aside-item"> 
            
            
            @Html.DropDownList(
                "Foo", 
                new SelectList(
                    Model.Select(x => new { Value = x.Title, Text = x.Title }),
                    "Value",
                    "Text"
                ),
                new {@class="home-dropdown"}
            )
            
        </div>
        <div class="grid-home-aside-item">
            <div class="dropdown">
                <button class="dropbtn">Categories-dropdown</button>
                <div class="dropdown-content">
                    <a href="#">Link 1</a>
                    <a href="#">Link 2</a>
                    <a href="#">Link 3</a>
                    <a href="#">Link 4</a>
                    <a href="#">Link 5</a>
                    <a href="#">Link 6</a>
                    <a href="#">Link 7</a>
                    <a href="#">Link 8</a>
                    <a href="#">Link 9</a>
                </div>
            </div>    
        </div> 
        <div class="grid-home-aside-item"> <button> best sellers </button> </div>
        <div class="grid-home-aside-item"> <a asp-controller="Home" asp-action="TopTen"> <button> top 10 </button> </a> </div>
    </aside>
    <main class="grid-home-main">
        <div class="grid-order-buttons"> 
            <button class="grid-order-buttons-item btn btn-default btn-xs"> name </button>
            <button class="grid-order-buttons-item btn btn-default btn-xs"> price </button>
            <button class="grid-order-buttons-item btn btn-default btn-xs"> rating </button>
            <button class="grid-order-buttons-item btn btn-default btn-xs"> bestsellers </button>
        </div>
        <div class="grid-container"> 
            @foreach(var book in Model)
            {   
                <div class="grid-items">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@book.Id"> 
                        <img src="@book.Image" alt="Image of @book.Title"> 
                    </a>
                    <div class="grid-book-title">@book.Title</div>
                    <div class="grid-book-rating">@book.Rating</div>
                    <div class="grid-book-price">@book.Price</div>

                    @if(SignInManager.IsSignedIn(User))
                    {
                        <button class="add-user-book btn btn-success" data-book=@book.Id data-price=@book.Price> im logged in add</button>
                    }
                    else 
                    {
                        <button class="add-book btn btn-danger" data-book=@book.Id data-price=@book.Price> im not logged in add</button>
                    }
                    
                </div>       
            }
        </div>
    </main> 
</div>

