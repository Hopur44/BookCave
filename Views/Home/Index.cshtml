@model List<BookCave.Models.ViewModels.BookViewModel>

<div class="d-flex flex-wrap">
        @foreach(var book in Model)
        {   
            <div class="bookSpace">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@book.Id"> 
                <img src="@book.Image" alt="Image of @book.Title" height="150" width="100"> 
                </a>
                 <p>@book.Title</p>
                <p>[@book.Rating/5] - @book.Price$$$</p><br/>
                <p></p><br/>
            </div>       
        }
</div>

