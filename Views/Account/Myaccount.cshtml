@model BookCave.Models.ViewModels.AccountViewModel
<div class="row">
    <h2>@Model.Name</h2>
    <div class="col-md-3">
        <img src="@Model.Image" alt="Image of MonkaShake" height="400" width="240"> 
    </div>
    <div class="col-md-3">
        <p>Address: @Model.Address</p>
        <p>Email: @Model.Email</p>
        <p>Favourite Book: @Model.FavouriteBook</p>
    </div>
    
</div>
<div class="row">
    <div class="col-md-6">
        <a asp-controller="Account" asp-action="History" type="button" class="btn btn-success">Order history</a>
    </div>
    <div class="col-md-6">
        <a asp-controller="Account" asp-action="EditAccount" type="button" class="btn btn-danger">Edit profile</a>
    </div>
</div>